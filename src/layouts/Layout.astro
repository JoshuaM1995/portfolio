---
import "../styles/reset.css";
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="I'm Joshua McNabb, a Full-Stack Software Developer skilled in JavaScript, TypeScript, Node.js, PostgreSQL, and React. Explore my portfolio and experience."
    />
    <meta
      name="keywords"
      content="Joshua McNabb, Full-Stack Developer, JavaScript, TypeScript, Node.js, PostgreSQL, React, Portfolio, Experience"
    />
    <meta name="author" content="Joshua McNabb" />
    <meta name="robots" content="index, follow" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta itemprop="image" content="/images/screenshot.png" />
    <meta
      property="og:title"
      content="Joshua McNabb - Full-Stack Software Developer"
    />
    <meta
      property="og:description"
      content="I'm Joshua McNabb, a Full-Stack Software Developer skilled in JavaScript, TypeScript, Node.js, PostgreSQL, and React. Explore my portfolio and experience."
    />
    <meta property="og:url" content="https://www.joshuamcnabb.ca" />
    <meta property="og:image" content="/images/screenshot.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Joshua McNabb - Full-Stack Software Developer"
    />
    <meta
      name="twitter:description"
      content="I'm Joshua McNabb, a Full-Stack Software Developer skilled in JavaScript, TypeScript, Node.js, PostgreSQL, and React. Explore my portfolio and experience."
    />
    <meta name="twitter:image" content="/images/screenshot.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
    />
    <link rel="stylesheet" href="/fonts/css/fontawesome.min.css" />
    <link rel="stylesheet" href="/fonts/css/solid.min.css" />
    <link rel="stylesheet" href="/fonts/css/brands.min.css" />
  </head>
  <body>
    <slot />
    <script src="https://unpkg.com/typeit@8.7.1/dist/index.umd.js"></script>

    <style is:global>
      html {
        font-family: "Inter", sans-serif;
        color: #fff;
        background: #0a111f !important;
      }

      a {
        color: #237186;
        text-decoration: none;
      }

      h1 {
        font-size: 2em;
        margin: 0.67em 0;
      }
      h2 {
        font-size: 1.5em;
        margin: 0.75em 0;
      }
      h3 {
        font-size: 1.17em;
        margin: 0.83em 0;
      }
      h5 {
        font-size: 0.83em;
        margin: 1.5em 0;
      }
      h6 {
        font-size: 0.75em;
        margin: 1.67em 0;
      }
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        color: #fcfffe;
        font-weight: bolder;
      }

      button {
        color: #002844;
        background: #18a1ba;
        border: none;
        padding: 0.8rem 1.6rem;
        border-radius: 2rem;
        min-width: 150px;
        cursor: pointer;
      }

      section {
        display: flex;
        justify-content: center;
        padding: 4rem 0;
      }

      input,
      textarea {
        color: #fff;
        background: #101724;
        width: 100%;
        padding: 0.8rem 1rem;
        border: 1px solid #1a212f;
        border-radius: 4px;

        &::placeholder {
          color: #353c49;
        }

        &:not(last-child) {
          margin-bottom: 1rem;
        }

        &:focus {
          outline: none;
          border-color: #353c49;
        }
      }
    </style>
  </body>
</html>
